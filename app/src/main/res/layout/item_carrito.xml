<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imgProducto"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/image_not_found" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/txtNombreProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del producto"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDisminuir"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:onClick="disminuirCantidad"
                android:text="-" />

            <TextView
                android:id="@+id/txtCantidad"
                android:layout_width="24dp"
                android:layout_height="34dp"
                android:text="0"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnAumentar"
                android:layout_width="112dp"
                android:layout_height="match_parent"
                android:onClick="aumentarCantidad"
                android:text="+" />
        </LinearLayout>

        <!-- Agrega un TextView para mostrar el total del producto -->
        <TextView
            android:id="@+id/txtTotalProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtPrecioProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.00"
        android:textSize="16sp" />
</LinearLayout>
