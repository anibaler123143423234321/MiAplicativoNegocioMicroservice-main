<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Otros atributos de estilo de tu aplicación -->
    </style>

    <!-- Define el estilo para el cuadro de diálogo personalizado -->
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/custom_dialog_background</item>
    </style>

    <style name="TextLabel">
        <item name="android:textColor">#000000</item>
        <!-- Otros atributos de estilo, si los tienes -->
    </style>

    <style name="SearchViewStyle">
        <!-- Cambia el color del texto de la consulta -->
        <item name="android:textColor">#000</item>
        <!-- Cambia el tamaño del texto de la consulta -->
        <item name="android:textSize">18sp</item>
        <!-- Cambia el color del ícono de búsqueda -->
        <item name="queryBackground">@android:color/white</item>
        <!-- Cambia el hint (texto de sugerencia) -->
        <item name="android:queryHint">Busca tu producto!</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:background">@drawable/background_circular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MyHintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">14sp</item>
        <!-- Otros atributos de estilo del texto del hint -->
    </style>


    <style name="MyTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="hintTextAppearance">@style/MyHintTextAppearance</item>
    </style>

</resources>
