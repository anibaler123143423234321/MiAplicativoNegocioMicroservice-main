<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Otros atributos de estilo de tu aplicación -->
    </style>

    <!-- Define el estilo para el cuadro de diálogo personalizado -->
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/custom_dialog_background</item>
    </style>

    <style name="TextLabel">
        <item name="android:textColor">#000000</item>
        <!-- Otros atributos de estilo, si los tienes -->
    </style>

    <style name="SearchViewStyle">
        <!-- Cambia el color del texto de la consulta -->
        <item name="android:textColor">#000</item>
        <!-- Cambia el tamaño del texto de la consulta -->
        <item name="android:textSize">18sp</item>
        <!-- Cambia el color del ícono de búsqueda -->
        <item name="queryBackground">@android:color/white</item>
        <!-- Cambia el hint (texto de sugerencia) -->
        <item name="android:queryHint">Busca tu producto!</item>
    </style>


</resources>
